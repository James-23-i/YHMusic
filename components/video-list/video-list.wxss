/* components/video-list/video-list.wxss */

.video {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;
}

.playCount .text {
  margin-left: 10rpx;
}

.video .item {
  width: 48%;
  margin-bottom: 10rpx;
}

.video .item .name {
  font-size: 12px;
  overflow: hidden; 
  white-space: nowrap; 
  text-overflow: ellipsis;
}

.video .item .image-desc {
  position: relative;
}

.video .item .image-desc .play {
  width: 100%;
  position: absolute;
  bottom: 10rpx;
  color: #ffffff;
  font-size: 10px;
  padding: 0 10rpx 5rpx;
  box-sizing: border-box;
}

.video .item .image-desc .play .play-item {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.video .item .image-desc .image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}