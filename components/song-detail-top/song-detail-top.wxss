/* components/song-detail-top/song-detail-top.wxss */
.song-detail-top {
  width: 100%;
  height: 360rpx;
  position: relative;
}

.song-detail-top .bg-image {
  width: 100%;
  height: 100%;
  opacity: .3;
  z-index: -1;
}

.song-detail-top .wrapper {
  width: 100%;
  position: absolute;
  top: 0;
  padding: 40rpx 40rpx 0 0;
}

.song-detail-top .top {
  display: flex;
  height: 90%;
  width: 100%;
}

.song-detail-top .top .top-left {
  width: 40%;
  text-align: center;
}

.top-left .image {
  width: 70%;
  border-radius: 10rpx;
}

.song-detail-top .top-right {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  width: 60%;
}

.top-right .title {
  width: 92%;
  font-size: 14px;
}

.top-right .center {
  height: 80rpx;
  display: flex;
}

.top-right .center .image {
  height: 80%;
  border-radius: 50%;
}

.top-right .center .nickname {
  font-size: 12px;
  line-height: 65rpx;
  margin-left: 20rpx;
}

.top-right .desc {
  width: 92%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-wrap: break-word;
}

.desc, .play, .share {
  font-size: 12px;
}

.song-detail-top .bottom {
  display: flex;
  height: 100rpx;
  width: 90%;
  justify-content: space-around;
  align-items: center;
}